
openapi: 3.1.0
info:
  title: Wardrobe API
  description: API para gerenciamento de roupas e sugestões de looks.
  version: "1.0.0"
servers:
  - url: https://web-production-818a8.up.railway.app
paths:
  /add:
    post:
      operationId: addItem
      summary: Adiciona uma peça ao guarda-roupa
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                nome:
                  type: string
                categoria:
                  type: string
              required:
                - nome
                - categoria
      responses:
        '200':
          description: Peça adicionada com sucesso

  /items:
    get:
      operationId: listItems
      summary: Lista todas as peças do guarda-roupa
      responses:
        '200':
          description: Lista de peças

  /looks:
    get:
      operationId: suggestLook
      summary: Sugere um look com base nas peças existentes
      responses:
        '200':
          description: Look sugerido

  /reset:
    post:
      operationId: resetWardrobe
      summary: Substitui todas as peças por uma nova lista
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                roupas:
                  type: array
                  items:
                    type: object
                    properties:
                      nome:
                        type: string
                      categoria:
                        type: string
      responses:
        '200':
          description: Guarda-roupa redefinido

  /remove:
    post:
      operationId: removeItem
      summary: Remove uma peça com base no nome
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                nome:
                  type: string
              required:
                - nome
      responses:
        '200':
          description: Peça removida com sucesso

components: {}
security: []
